server {
	server_name localhost;

	error_page 404 /404.html;
	location = /404.html {
		internal;
	}

	root /var/www/html;

	rewrite ^(/.*)\.html(\?.*)?$ $1$2 permanent;
	rewrite ^/(.*)/$ /$1 permanent;

	index index.html;
	location / {
		try_files $uri/index.html $uri.html $uri/ $uri =404;
	}

	location ~ /.well-known {
		allow all;
  }
}
